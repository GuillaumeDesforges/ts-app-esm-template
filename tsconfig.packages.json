{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "composite": true
  }
}
